<div class="dropdown">
      <%= form_with url: exercises_path, method: :get do |f| %>
      <%= f.select :exercise_type, Exercise.pluck(:exercise_type).uniq, { include_blank: 'exercise type' } %>
      <%= f.submit "Filter" %>
    <% end %>
</div>

<div class="card-workout-info">
  <h3 class="card-title">Exercises</h3>
  <% if @exercises.length > 0 %>
    <ul class="show-rep">
      <% @exercises.each do |exercise| %>
        <% if !@workout.nil? %>
          <li class="rep">Name: <%= exercise.name %><br>Type: <%= exercise.exercise_type %> - Equipment: <%= exercise.equipment %><br><%= exercise.description %><br><%= link_to "Add", new_workout_exercise_repetition_path(@workout, exercise) %></li>
        <% else %>
          <li class="rep">Name: <%= exercise.name %><br>Type: <%= exercise.exercise_type %> - Equipment: <%= exercise.equipment %><br><%= exercise.description %></li>
        <% end %>
      <% end %>
    </ul>
    <% if !@workout.nil? %>
      <%= link_to "new exercise", new_workout_exercise_path(@workout) %><br>
      <%= link_to "cancel", workout_path(@workout) %>
    <% else %>
      <%= link_to "new exercise", new_exercise_path %><br>
    <% end %>
  <% end %> 
</div>